{
  "manifest_version": 3,
  "name": "SoundCloud to Spotify",
  "description": "Chrome extension to transfer Soundcloud playlists, albums, tracks, and Likes directly into your Spotify account",
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-64.png"
  },
  "icons": {
    "128": "icon-64.png"
  },
  "content_scripts": [
    {
      "matches": ["*://soundcloud.com/**"],
      "js": ["contentScript.bundle.js"]
    }
  ],
  "permissions": ["identity", "tabs"],
  "host_permissions": ["https://*.spotify.com/"],
  "web_accessible_resources": [
    {
      "resources": ["icon-64.png"],
      "matches": []
    }
  ]
}
